a
  color: #999
  text-decoration: underline

body
  padding-top: 60px

  img.logo
    width: 70px
    margin-bottom: 36px

  h1
    font-size: 24px
    margin-bottom: 6px
  h2
    font-size: 15px
    margin-bottom: 36px

  form.join
    margin: 0 auto
    width: 50%
    div.name
      div
        flex: 1
      div.firstname
        margin-right: 12px
      div.lastname
        margin-left: 12px
    label
      margin-bottom: 5px
      font-size: 15px
      line-height: 24px
      font-weight: normal
    input
      width: 100%
      height: 40px
      padding: 6px 12px
      font-size: 15px
      line-height: 1.6
      transition: border-color 0.15s ease-in-out
      border: 1px solid #999
      box-sizing: border-box
      border-radius: 3px
      margin-bottom: 24px
      &:focus
        outline: none
        border-color: #111

    button
      color: white
      background-color: #111
      padding: 9px 18px
      cursor: pointer
      font-size: 15px
      height: 40px
      border: 0
      border-radius: 3px



  p
    display: inline
    margin-top: 40px
    margin-bottom: 42px
    a
      display: inline
